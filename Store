public class Store {
    //Instance variables
    private int storeId;
    private String storeName;
    private String location;
    private String openingHour;
    private double totalSales;
    private double totalDiscount;

    //Constructor Methods for creating store objects
    public Store(int storeId, String storeName, String location, String openingHour) {
        this.storeId = storeId;
        this.storeName = storeName;
        this.location = location;
        this.openingHour = openingHour;
        this.totalSales = 0; // null values
        this.totalDiscount = 0; //null values
    }

    public Store(int id, String name, String loc, String opening, double sales, double discount) {
    }

    public Store() {

    }

    //Accessor Methods to access the values
    public int getStoreId() {
        return storeId;
    }

    public String getStoreName() {
        return storeName;
    }

    public String getLocation() {
        return location;
    }

    public String getOpeningHour() {
        return openingHour;
    }

    public double getTotalSales() {
        return totalSales;
    }

    public double getTotalDiscount() {
        return totalDiscount;
    }

    //Mutator Methods to set values
    public void setTotalSales(double newtotalSales){
        totalSales += newtotalSales;
    }

    public void setTotalDiscount(double newDiscount) {
        totalDiscount += newDiscount;
    }

    //Display Method to display the output values
    public void display() {
        System.out.println("Store ID: " + storeId);
        System.out.println("Store Name: " + storeName);
        System.out.println("Location: " + location);
        System.out.println("Opening Hour: " + openingHour);

        // To check the condition for totalSales
        if (totalSales == 0 ) {
            System.out.println("Total Sales is not available");

        } else {
            System.out.println("Total Sales: " + totalSales);
        }

        //To check the condition for totalDiscount
        if (totalDiscount == 0){
            System.out.println("Total Discount is not available");
        } else{
            System.out.println("Total Discount: " + totalDiscount );
        }
    }
}
